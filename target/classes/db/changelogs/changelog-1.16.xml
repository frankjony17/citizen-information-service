    <changeSet author="joao.cabral" id="1.16.02">
        <addUniqueConstraint columnNames="nm_subtema"
                             constraintName="nm_subtema_unique"
                             schemaName="sdsic"
                             tableName="tb_subtema" />
        <addUniqueConstraint columnNames="ds_palavra_chave"
